<h1>Lista de posts: </h1>

<style>
    body {
        background-color: #000000d8;
    }

    h1 {
        color: #ffffffc2;
    }

    p {
        color: #ffffffc2;
    }

    

    button {
        background-color: #ffffffc2;
        color: #000000;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    button:hover {
        background-color: #494d49;
    }

    hr {
        margin: 20px 0;
    }
</style>

{{#each posts}}
    <h1>{{titulo}}</h1>
    <p>{{conteudo}}</p>
    <a href="/deletar/{{id}}"><button>Deletar</button></a>
    <a href="/cad"><button>Criar Novo Post</button></a>
    <hr>
{{/each}}

